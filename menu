//mostrar triangulo



   

    for(int x=0;x<height;x++){

     for(int y=0;y<(height- x);y++){

         

          cout<<" ";

    } 

     for(int y=0;y<((2*x)- 1);y++){

         

          cout<<"*";

    } 

    

         

    cout<<endl;

 }  

    


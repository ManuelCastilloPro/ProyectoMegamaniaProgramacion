#include <iostream>
#include <stdio.h>
#include <conio.h> 
#include <windows.h>

using namespace std;
void gotoxy(int x,int y){
    HANDLE hcon;  
      hcon = GetStdHandle(STD_OUTPUT_HANDLE);  
      COORD dwPos;  
      dwPos.X = x;  
      dwPos.Y= y;  
      SetConsoleCursorPosition(hcon,dwPos);  
  
}
int main()
{
//Muestra el contorno del menu principal
  for(int i=0;i<25;i++){

     for(int j=0;j<25;j++){

       if(i==0 or i==25- 1 or j==25- 1 or j==0  ){
        
           cout<<" *";

       }

       else{

           cout<<"  ";

       }
    } 
    cout<<endl;
   
 }  
  //colocar opciones de menu
 	
 	gotoxy(2,2);cout<<"      	    Iniciar"<<endl;
 	for(int i=0; i<25; i++){
 		cout<<" *";
	 }
 	gotoxy(4,4);cout<<"	   	 Instrucciones"<<endl;
 	for(int i=0; i<25; i++){
 		cout<<" *";
	 }
 	gotoxy(6,6);cout<<"	           Creditos"<<endl;
 	for(int i=0; i<25; i++){
 		cout<<" *";
	 }
 	gotoxy(8,8);cout<<"	     Salir"<<endl;
 	for(int i=0; i<25; i++){
 		cout<<" *";
	 }

	cout<<endl;
	gotoxy(13,13);cout<<"          [*]"<<endl;
	gotoxy(14,14);cout<<"        [***]"<<endl;             
	gotoxy(15,15);cout<<"      [*****]"<<endl;
	gotoxy(16,16);cout<<"   [*********]"<<endl;
	gotoxy(17,17);cout<<" [___________]"<<endl;
		
      

         

    cout<<endl;
    	return 0;
	}
	
